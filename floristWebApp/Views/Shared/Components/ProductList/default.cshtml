@model List<Product>

<div class="row">

@foreach (var item in Model)
{
    <div class="col-md-3">
        <div class="card m-1 mb-1">
            <img src="..." class="card-img-top" alt="Resim Yok">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Price</p>
                <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.Id"
                class="btn btn-primary float-left">Detail</a>
            </div>
        </div>
    </div>
}
</div>