@model Product

<div class="container"> 
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.Photo" class="w-100 img-thumbnail img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    @Model.Name
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Price</p>
                    <p class="card-text">
                        <strong>Categories :</strong> <getCategoryName product-id="@Model.Id"></getCategoryName>
                    </p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Turn Back</a>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
    </div>

</div>


