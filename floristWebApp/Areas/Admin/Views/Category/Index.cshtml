@model List<Category>

<a asp-action="CreateCategory" asp-controller="Category" asp-area="Admin" class="btn btn-primary btn-sm my-2">Add Category</a>

<table class="table table-sm table-bordered table-hover mt-2">

    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="UpdateCategory" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id"
               class="btn btn-warning btn-sm">Update</a>
                <a asp-action="DeleteCategory" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id"
               class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }

</table>