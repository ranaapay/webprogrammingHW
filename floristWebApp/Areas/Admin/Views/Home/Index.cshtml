@model List<Product>

    <a asp-action="CreateProduct" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Add Product</a>

<table class="table table-sm table-bordered table-hover mt-2">
    
    <tr>
        <th>Id</th>
        <th>Categories</th>
        <th>Name</th>
        <th>Price</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>
                <getCategoryName product-id="@item.Id" ></getCategoryName>
            </td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a asp-action="DeleteProduct" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id"
               class="btn btn-danger btn-sm">Delete</a>

                <a asp-action="UpdateProduct" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id"
                class="btn btn-warning btn-sm">Update</a>

                <a asp-action="AddCategoryToProduct" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id"
               class="btn btn-dark btn-sm">Add Category</a>
            </td>
        </tr>
    }

</table>